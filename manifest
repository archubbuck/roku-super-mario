# Channel Information
title=Super Mario Clone
subtitle=Classic platformer action
major_version=1
minor_version=0
build_version=1

# Developer Information
mm_icon_focus_hd=pkg:/images/splash-hd.png
mm_icon_focus_fhd=pkg:/images/splash-fhd.png
splash_screen_fhd=pkg:/images/splash-fhd.png
splash_screen_hd=pkg:/images/splash-hd.png
splash_color=#000000
splash_min_time=1000

# Resolution Configuration
# Target FHD (1920x1080) as logical coordinate system
# Roku OS will automatically scale for 720p devices
ui_resolutions=fhd

# CRITICAL: Game Mode
# game=1 is REQUIRED for low-latency audio in games
# Without this, sound effects lag 200-500ms behind input
# This signals the OS to prioritize audio subsystem buffer
game=1

# Performance Profiling
# Enable BrightScript profiler for performance analysis
# Download .bsprof files via http://roku-ip/ after running
bsprof_enable=1

# Application Requires
# Minimum Roku OS version (9.0+)
requires_audiometadata=1
